  <section class="portfolio-item-details">
    <div class="container">
      <div class="row item-title">
        <div class="col-sm-9">
          <h1>참가 인원 관리</h1>
          <div class="categories">
            <%= link_to (@notice.title + " in " + @notice.activity.title), club_admin_activity_path(current_club, @notice.activity) %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="text-right">
            <div class="item-detail">
              <%= link_to "취소", club_admin_notice_path(current_club, @notice), class: "btn btn-gold" %>
            </div>
            <div class="item-detail">
              <span>Date:</span>
              <%= @notice.created_at %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="portfolio-container">
    <div class="container">
      <p>공지 내용 : <%= @notice.content %></p>
      <p>실제 공지 주소 : <%= link_to @notice.link, @notice.link, target: "_blank" %></p>
      <p>통합 공지 주소 : <%= link_to @notice.shortenURL, @notice.shortenURL, target: "_blank" %></p>

      <p>행사 날짜 : <%= @notice.event_at %></p>
      <p>모집 시한 : <%= @notice.due_date %></p>
      <p>최대 참가 인원 : <%= @notice.to %></p>

      <% if @notice_deadline_end %>
        <%= link_to "마감", to_notice_end_deadline_club_admin_notice_path(current_club, @notice.id), class: "btn btn-warning" %>
      <% else %>
        <%= form_for @notice_form, url: to_notice_change_deadline_club_admin_notice_path(current_club, @notice_form.id), html: {role: "form", class: "form-horizontal"} do |f|%>
          <div class="modal-body">
            <div class="form-group form-group-sm has-feedback <%= validation_state(@notice, :due_date) %>">
              <%= f.label :due_date, "모집 시한 변경", class: "control-label" %>
              <div>
                <%= f.date_select :due_date, {start_year: Date.today.year, default: 4.days.from_now }, {class: "selectpicker"} %>
                <%= f.submit "연장", class: "btn btn-primary"  %>
                <span class="glyphicon <%= validation_state_feedback(@notice_form, :due_date) %> form-control-feedback"></span>
                <span class="help-block"><%= attribute_error_message(@notice_form, :due_date) %></span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="clearfix"></div>
      <%= form_tag(club_admin_notice_responses_path(current_club, @notice), method: "post") do %>
        <%= hidden_field_tag 'notice_id', @notice.id %>
        <div>
          <h3>참가 <small>(총 <%= current_club.users.responsed_go(@notice).count %>명)</small></h3>
          <%= render partial: "table", locals: { users: current_club.users.responsed_go(@notice).order_by_responsed_at.decorate, type: "go" } %>
        </div>
        <div class="notice-under">
          <h3>대기 <small>(총 <%= current_club.users.responsed_wait(@notice).count %>명)</small></h3>
          <%= render partial: "table", locals: { users: current_club.users.responsed_wait(@notice).order_by_responsed_at.decorate, type: "wait" } %>
        </div>
        <div class="notice-under">
          <h3>미응답 <small>(총 <%= User.responsed_not_to_notice(@notice, current_club).count %>명)</small></h3>
          <%= render partial: "table", locals: { users: User.responsed_not_to_notice(@notice, current_club).decorate, type: "not" } %>
        </div>

        <div class="pull-right">
          <%= button_tag type: :submit, class: "btn btn-info btn-lg btn-icon" do %>
            변경<i class="entypo-check"></i>
          <% end %>
          <%= link_to club_admin_notice_path(current_club, @notice) do %>
            <button type="button" class="btn btn-gold btn-lg btn-icon">
              취소<i class="entypo-cancel"></i>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
