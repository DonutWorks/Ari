  <section class="portfolio-item-details">
    <div class="container">
      <div class="row item-title">
        <div class="col-sm-9">
          <h1>이벤트</h1>
          <div class="categories">
            <a>커뮤니티의 전체 이벤트 리스트 입니다.</a>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="text-right">
            <div class="item-detail">
              <%= link_to "새 이벤트", new_club_admin_activity_path(current_club), class: "btn btn-green " %>
            </div>
        </div>
      </div>
    </div>
  </section>

  <section class="portfolio-container">
    <div class="container">
      <div class="row">
        <% @activities.each do |activity| %>
          <div class="col-sm-12">
            <div class="ari-activity-tile tile-stats tile-white tile-white-primary">

              <div class="row">
                <div class="col-sm-9">
                  <div class="ari-activity-title-area num" ><%= link_to activity.title, club_admin_activity_path(current_club, activity), class: "ari-activity-title" %></div>
                </div>
                <div class="col-sm-3">
                  <div class="text-right">
                    <div class="item-detail">
                      <%= activity.description %>
                    </div>
                    <div class="item-detail">
                      <span>Date:</span>
                      <%= activity.event_at %>
                    </div>
                    <h3></h3>
                  </div>
                </div>
              </div>
              <div class="ari-notice-group row">
                <% activity.notices.created_at_desc.each_with_index do |notice, index| %>
                  <% if index < 3 %>
                    <div class="col-sm-4">
                    <%= link_to club_admin_notice_path(current_club, notice), class: "list-group-item" do %>
                      <span><%= notice.title %></span>
                      <% if notice.notice_type == "to" %>
                        <div class="ari-badge-progress progress">
                          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
                            <span class="sr-only">35% Complete (success)</span>
                          </div>
                        </div>
                      <% elsif notice.notice_type == "survey" %>
                        <div class="ari-badge-pie">
                          <input class="knob" data-min="0" data-max="10" data-width="20" data-height="20" data-thickness=".25" data-fgColor="#21a9e1" data-bgColor="#ebebeb" value="6">
                        </div>
                      <% elsif notice.notice_type == "checklist" %>
                        <div class="ari-badge-progress progress">
                          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
                            <span class="sr-only">35% Complete (success)</span>
                          </div>
                        </div>
                      <% else %>
                        <span class="badge">
                          <%= "#{notice.readers.count} / #{current_club.users.all.count}" %>
                        </span>
                      <% end %>
                    <% end %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
