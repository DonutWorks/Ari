<h3 class="pull-left">공지사항 관리</h3>

<div id="buttons-div" class="pull-right">
  <%= link_to new_admin_activity_path do %>
    <button type="button" class="btn btn-success btn-sm ">
      새 활동
    </button>
  <% end %>
  <%= link_to new_admin_notice_path do %>
    <button type="button" class="btn btn-primary btn-sm ">
      새 공지
    </button>
  <% end %>
</div>

<div class="clearfix"></div>

<% @activities.each do |activity| %>
  <div id="notice-container" class="panel panel-default">
    <div class="panel-heading"><%= activity.title %></div>
      <ul class="list-group">
        <% activity.notices.each do |notice| %>
          <%= link_to admin_notice_path(notice), class: "list-group-item" do %>
            <span><%= notice.title %></span>
            <span class="badge">
              <%= "#{notice.readers.count} / #{User.all.count}" %>
            </span>
          <% end %>
        <% end %>
      </ul>
    </div>
<% end %>

</div>
