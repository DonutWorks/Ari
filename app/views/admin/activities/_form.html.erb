<div class="form-group form-group-lg has-feedback <%= validation_state(@activity, :title) %>">
  <%= f.label :title, "제목", class: "col-sm-1 control-label" %>
  <div class="col-sm-11">
    <%= f.text_field :title, class: "form-control" %>
    <span class="glyphicon <%= validation_state_feedback(@activity, :title) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@activity, :title) %></span>
  </div>
</div>

<div class="form-group form-group-lg has-feedback <%= validation_state(@activity, :description) %>">
  <%= f.label :description, "설명", class: "col-sm-1 control-label" %>
  <div class="col-sm-11">
    <%= f.text_area :description, rows: 5, class: "form-control" %>
    <span class="glyphicon <%= validation_state_feedback(@activity, :description) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@activity, :description) %></span>
  </div>
</div>

<div class="form-group form-group-lg has-feedback <%= validation_state(@activity, :event_at) %>">
  <%= f.label :event_at, "행사 날짜", class: "col-sm-1 control-label" %>
  <div class="col-sm-11 margin-top15">
    <%= f.date_select :event_at, {start_year: Date.today.year, default: 4.days.from_now }, {class: "selectpicker"} %>

    <span class="glyphicon <%= validation_state_feedback(@activity, :event_at) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@activity, :event_at) %></span>
  </div>
</div>

<div class="form-group form-group-lg has-feedback">
    <label class="col-sm-1 control-label">옵션</label>
      <div class="col-sm-11">
      <label class="control-label"><input type="radio" id="fee-radio" checked="true"> 참가비</label>
    </div>
  </div>
  
  <div id="fee-option">
    <div class="form-group form-group-lg has-feedback">
      <%= f.label :regular_dues, "정단원", class: "col-sm-2 control-label" %>
      <div class="col-sm-10 input-group">
        <%= f.number_field :regular_dues, class: "form-control" %>
        <span class="input-group-addon">원</span>
      </div>
    </div>

    <div class="form-group form-group-lg has-feedback">
      <%= f.label :associate_dues, "예비단원", class: "col-sm-2 control-label" %>
      <div class="col-sm-10 input-group">
        <%= f.number_field :associate_dues, class: "form-control" %>
        <span class="input-group-addon">원</span>
      </div>
    </div>
  </div>
