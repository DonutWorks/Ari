<div class="form-group form-group-lg has-feedback">
  <%= label_tag :logo_url, "로고 주소", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :logo_url, autofocus: true, class: "form-control" %>
    <span class="glyphicon <%= validation_state_feedback(@club, :logo_url) %> form-control-feedback"></span>
    <span class="help-block"><%= attribute_error_message(@club, :logo_url) %></span>
      <%= image_tag (@club.logo_url || asset_url('club.jpg')) %>
  </div>
</div>