<div class="form-container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for [current_club, :admin, @user], html: {role: "form", class: "form-horizontal"} do |f| %>
        <legend>회원 정보 수정하기</legend>
        <%= render partial: 'form', locals: {f: f} %>
        <div class="pull-right">
          <%= f.submit "수정", class: "btn btn-primary btn-lg"  %>
          <%= link_to club_admin_user_path(current_club, @user) do %>
            <button type="button" class="btn btn-default btn-lg">
              취소
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
