<p id="notice"><%= flash[:notice] %></p>
<h3 class="pull-left">회원 목록</h3>

<div id="buttons-div" class="pull-right">
  <%= link_to new_user_registration_path do %>
    <button type="button" class="btn btn-default btn-sm">
      회원 등록
    </button>
  <% end %>
  <%= link_to new_admin_import_path do %>
    <button type="button" class="btn btn-default btn-sm">
      엑셀로 회원 등록
    </button>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>이름</th>
        <th>전화번호</th>
        <th>이메일</th>
        <th>전공</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.email %></td>
        <td><%= user.major %></td>
        <td>
          <%= link_to "수정", edit_admin_user_path(user), class: "btn btn-default" %>
          <%= link_to "삭제", admin_user_path(user), method: :delete,
          data: { confirm: '정말 삭제하시겠어요?' }, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>