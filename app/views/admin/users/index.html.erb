<div class="page-header clearfix">
  <h3 class="pull-left">회원 목록</h3>

  <div id="buttons-div" class="pull-right">
    <%= link_to new_admin_user_path do %>
      <button type="button" class="btn btn-default btn-sm">
        회원 등록
      </button>
    <% end %>
    <%= link_to new_admin_import_path do %>
      <button type="button" class="btn btn-default btn-sm">
        엑셀로 회원 등록
      </button>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead>
      <tr>
        <th>이름</th>
        <th>전화번호</th>
        <th>이메일</th>
        <th>전공</th>
        <th>메뉴</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="clickable-row" href="<%= admin_user_path(user) %>">
          <td><%= user.username %></td>
          <td><%= pretty_phone_number(user.phone_number) %></td>
          <td><%= user.email %></td>
          <td><%= user.major %></td>
          <td><%= link_to "자세히", admin_user_path(user), class: "btn btn-link btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(".clickable-row").click(function() {
        window.document.location = $(this).attr("href");
  });
</script>