
<section class="portfolio-item-details">
  <div class="container">
    <div class="row item-title">
      <div class="col-sm-9">
        <h1>멤버 목록</h1>
        <div class="categories">
          <a></a>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="text-right">
          <div class="item-detail">
            <%= link_to "멤버 등록", new_club_admin_user_path(current_club), class: "btn btn-blue" %>
            <%= link_to "엑셀로 멤버 등록", import_club_admin_users_path(current_club), class: "btn btn-info" %>
          </div>
          <div class="item-detail">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="portfolio-container">
  <div class="container">
    <div class="form-group form-group-lg has-feedback">
      <span class="help-block">검색</span>
      <%= text_area_tag :user_filter_word, "", autofocus: true, class: "form-control search_box textcomplete", rows: 1 %>
    </div>

    <div class="table-responsive" id="table-user-list">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>이름</th>
            <th>전화번호</th>
            <th>이메일</th>
            <th>태그</th>
            <th>메뉴</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr id="tr-user-id-<%= user.id %>" class="clickable-row" href="<%= club_admin_user_path(current_club, user) %>">
              <td>
                <%= user.username %>
                <% if user.activated? %>
                  <span class="glyphicon glyphicon-ok"></span>
                <% end %>
              </td>
              <td><%= user.phone_number %></td>
              <td><%= user.email %></td>
              <td><%= user.tags %></td>
              <td class="menu"><%= link_to "자세히", club_admin_user_path(current_club, user), class: "btn btn-link btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    $(".clickable-row td:not(.menu)").on("click", function(e) {
      var tr = $(this).parent();
      window.document.location = $(tr).attr("href");
    })
  });
</script>
