<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th class="text-center" width="5%">문자 <%= check_box_tag "sms_#{type}_all", nil, false, class: 'sms_all' %></th>
        <th width="5%">기수</th>
        <th width="7%">이름</th>
        <th width="13%">전화번호</th>
        <th width="55%">체크</th>
        <th width="15%"><%= type == "read" || type == "unread" ? "읽은 시간" : "기록 시간" %></th>
      </tr>
    </thead>
    <tbody>
      <% users.each_with_index do |user, index| %>
      <tr>
        <td class="text-center"><%= check_box_tag 'sms_user[' + user.id.to_s + ']', nil, false, class: "sms_check sms_#{type}" %></td>
        <td class="text-right"><%= pretty_generation_id(user.generation_id) %></td>
        <td><%= user.username %></td>
        <td><%= pretty_phone_number(user.phone_number) %></td>
        <td>
          <div class="button-group">
            <button type="button" id="absence_btn" class="btn btn-default <%= user.responses.find_by_notice_id(@notice).absence == 0 ? '' : 'btn-success' %>", onclick="javascript:update_check_status(<%=@notice.id %>, <%= user.responses.find_by_notice_id(@notice).id %>, 'absence')">출석</button>

            <button type="button" id="dues_btn" class="btn btn-default <%= user.responses.find_by_notice_id(@notice).dues == 0 ? '' : 'btn-primary' %>", onclick="javascript:update_check_status(<%=@notice.id %>, <%= user.responses.find_by_notice_id(@notice).id %>, 'dues')">회비</button>

            <button type="button" id="memo_btn" class="btn btn-default <%= user.responses.find_by_notice_id(@notice).memo.blank? ? '' : 'btn-warning' %>", onclick="javascript:open_memo()">메모</button>
          </div>
          <div class="memo">
            <div id="memo_in" class="<%= user.responses.find_by_notice_id(@notice).memo.blank? ? 'hide_memo' : 'show_memo' %>">
              <p id="memo_div"><%= user.responses.find_by_notice_id(@notice).memo %></p>
              <div class="glyphicon-group">
                <span class="glyphicon glyphicon-remove" onclick="javascript:update_check_status(<%=@notice.id %>, <%= user.responses.find_by_notice_id(@notice).id %>, 'memo')"></span>
                <span class="glyphicon glyphicon-edit" onclick="javascript:edit_memo(<%=@notice.id %>, <%= user.responses.find_by_notice_id(@notice).id %>, 'memo')"></span>
                </div>
            </div>
            
            <div id="memo_not_in" class="hide_memo">
              <input type="text" id="memo_edit" />
              <button type="button" class="btn btn-default", onclick="javascript:update_check_status(<%=@notice.id %>, <%= user.responses.find_by_notice_id(@notice).id %>, 'memo')">등록</button>
            </div>
          <div>
        </td>
        <td>
          <%= user.responses.time(@notice) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>