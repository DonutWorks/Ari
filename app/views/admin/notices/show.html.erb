  <section class="portfolio-item-details">
    <div class="container">
      <div class="row item-title">
        <div class="col-sm-9">
          <h1><%= @notice.title %></h1>
          <div class="categories">
          <%= link_to (@notice.notice_type + " in " + @notice.activity.title), club_admin_activity_path(current_club, @notice.activity) %>
          </div>
        </div>
        
        <div class="col-sm-3">
          <div class="text-right">
            <div class="item-detail">
              <%= link_to "수정", edit_club_admin_notice_path(current_club, @notice), class: "btn btn-warning" %>
              <%if @notice.raw_notice_type =="to" %>
                <%= link_to "TO관리", club_admin_notice_responses_path(current_club, @notice), class: "btn btn-info" %>
              <% end %>
              <%= link_to "삭제", club_admin_notice_path(current_club, @notice), method: :delete,
              data: { confirm: '정말 삭제하시겠어요?' }, class: "btn btn-danger" %>
            </div>
            <div class="item-detail">
              <span>Date:</span>
              <%= @notice.created_at %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="portfolio-container">
    <div class="container">
      <p>공지 내용 : <%= @notice.content %></p>
      <% if @notice.external_notice? %>
        <p>실제 공지 주소 : <%= link_to @notice.link, @notice.link, target: "_blank" %></p>
      <% end %>
      <p>통합 공지 주소 : <%= link_to @notice.shortenURL, @notice.shortenURL, target: "_blank" %></p>
      <% if @notice.to_notice? %>
        <p>행사 날짜 : <%= @notice.event_at %></p>
        <p>모집 시한 : <%= @notice.due_date %></p>
        <p>신청 현황 : <%= User.responsed_go(@notice).count %>명 / <%= @notice.to %>명</p>
        <p>참가비 : 정단원(<%= @notice.regular_dues ? @notice.regular_dues : "0" %>원), 예비단원(<%= @notice.associate_dues ? @notice.associate_dues : "0" %>원)</p>
      <% end %>
      <div class="clearfix"></div>

      <%= form_tag(club_admin_messages_path(current_club), method: "post") do %>
        <%= hidden_field_tag 'notice_id', @notice.id %>

        <ul class="nav nav-tabs" role="tablist">
          <li class="secondary-nav <%= 'active' if @notice.raw_notice_type == 'external' or @notice.raw_notice_type == 'internal' %>">
            <a href="#read-unread" role="tab" data-toggle="tab">읽음 확인</a>
          </li>
          <% case @notice.raw_notice_type %>
          <% when "checklist" then %>
            <li class="secondary-nav active"><a href="#checklist-result" role="tab" data-toggle="tab">수행 현황</a></li>
          <% when "to" then %>
            <li class="secondary-nav active"><a href="#to-result" role="tab" data-toggle="tab">실시간 TO 현황</a></li>
          <% when "survey" then %>
            <li class="secondary-nav active"><a href="#survey-result" role="tab" data-toggle="tab">수요 조사</a></li>
          <% end %>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade <%= 'in active' if @notice.raw_notice_type == 'external' or @notice.raw_notice_type == 'internal' %>" id="read-unread">
            <div>
              <h3>읽은 회원 <small>(총 <%= @notice.readers.count %>명)</small></h3>
              <%= render partial: "table", locals: { users: @notice.readers.order_by_read_at.decorate, type: "read" } %>
            </div>

            <div class="notice-under">
              <h3>안 읽은 회원 <small>(총 <%= @notice.unreaders.count %>명)</small></h3>
              <%= render partial: "table", locals: { users: @notice.unreaders.generation_sorted_desc.decorate, type: "unread" } %>
            </div>
          </div>
          <div class="tab-pane fade <%= 'in active' if @notice.raw_notice_type == 'survey' %>" id="survey-result">
            <div>
              <h3>참가 <small>(총 <%= User.responsed_yes(@notice).count %>명)</small></h3>
              <%= render partial: "table", locals: { users: User.responsed_yes(@notice).order_by_responsed_at.decorate, type: "yes" } %>
            </div>
            <div class="notice-under">
              <h3>불확실 <small>(총 <%= User.responsed_maybe(@notice).count %>명)</small></h3>
              <%= render partial: "table", locals: { users: User.responsed_maybe(@notice).order_by_responsed_at.decorate, type: "maybe" } %>
            </div>
            <div class="notice-under">
              <h3>불참 <small>(총 <%= User.responsed_no(@notice).count %>명)</small></h3>
              <%= render partial: "table", locals: { users: User.responsed_no(@notice).order_by_responsed_at.decorate, type: "no" } %>
            </div>
          </div>

          <div class="tab-pane fade <%= 'in active' if @notice.raw_notice_type == 'to' %>" id="to-result">
            <div>
              <h3>참가 <small>(총 <%= User.responsed_go(@notice).count %>명)</small></h3>
              <%= render partial: "table_to_response", locals: { users: User.responsed_go(@notice).order_by_responsed_at.decorate, type: "go" } %>
            </div>
            <div class="notice-under">
              <h3>대기 <small>(총 <%= User.responsed_wait(@notice).count %>명)</small></h3>
              <%= render partial: "table_to_response", locals: { users: User.responsed_wait(@notice).order_by_responsed_at.decorate, type: "wait" } %>
            </div>
          </div>

          <div class="tab-pane fade <%= 'in active' if @notice.raw_notice_type == 'checklist' %>" id="checklist-result">
            <%= render partial: 'notices/checklists', locals: {notice: @notice, checklists: @notice.checklists} %>
          </div>
        </div>
        <div class="sms-text fix-bottom">
          <h3>문자 보내기</h3>
          <p id="phone_numbers">총 0명이 선택 되었습니다.</p>
          <%= text_area_tag 'sms_content', "[서울대 햇빛봉사단]", class: 'form-control' %>
          <div class="pull-right margin-top15">
            (<span id="current-text-size">19</span>/90 bytes)
            <button id="send_sms" type="submit" class="btn btn-primary btn-sm">전송</button>
          </div>
        </div>
      <% end %>

    </div>
  </section>
