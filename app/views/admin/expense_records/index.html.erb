<div class="page-header clearfix">
  <h3 class="pull-left">회계내역 관리</h3>
  <div id="buttons-div" class="pull-right">
    <%= link_to "내역 업데이트", new_admin_bank_account_expense_record_path(@bank_account), class: "btn btn-default" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead>
      <tr>
        <th>일자</th>
        <th>출금</th>
        <th>입금</th>
        <th>내용</th>
        <th>자동확인</th>
      </tr>
    </thead>

    <tbody>
      <% @bank_account.expense_records.order('record_date DESC').each do |record| %>
        <tr class="<%= record.confirm? ? 'success' : '' %>">
          <td><%= record.record_date.strftime("%Y-%m-%d %T") %></td>
          <td><%= record.withdraw %> 원</td>
          <td><%= record.deposit %> 원</td>
          <td><%= record.content %></td>
          <td><span class="<%= record.confirm? ? 'glyphicon glyphicon-ok' : '' %>"></span><td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
