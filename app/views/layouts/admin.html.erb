<!DOCTYPE html>
<html>
<head>
  <title>Ari</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to current_club.name, club_admin_root_path(current_club), class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "공지", club_admin_root_path(current_club) %>
          </li>
          <li>
            <%= link_to "회원", club_admin_users_path(current_club) %>
          </li>
          <li>
            <%= link_to "설문조사", new_club_admin_export_excel_path(current_club) %>
          </li>
          <li>
            <%= link_to "SMS", club_admin_messages_path(current_club) %>
          </li>
          <li>
            <%= link_to "로그아웃", destroy_admin_user_session_path, method: :delete %>
          </li>
          <li>
            <%= link_to "회계", admin_bank_account_expense_records_path(bank_account_id: 1) %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <input type="hidden" id="current-club-slug" value="<%= current_club.slug %>" />
    <%= render 'layouts/messages' %>
    <%= yield %>
  </div>

</body>
</html>
