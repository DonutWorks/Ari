<div class="profile-env">

  <header class="row">
    <div class="col-sm-2">
      <a href="#" class="profile-picture">
        <%= image_tag(user.extra_info.try(:[], 'image') || asset_url('member.jpg'), class: "img-responsive img-circle") %>
      </a>
    </div>

    <div class="col-sm-10">
      <ul class="profile-info-sections">
        <li>
          <div class="profile-name">
            <strong>
              <a href="#"><%= user.username %></a>
              <a href="#" class="user-status is-online tooltip-primary" data-toggle="tooltip" data-placement="top" data-original-title="Online"></a>
            </strong>
            <span><a href="#"><%= user.club.name %></a></span>
          </div>
        </li>

        <li>
          <div class="profile-stat">
            <h3><%= PublicActivity::Activity.where(owner: user).count %></h3>
            <span><a href="#">Activities</a></span>
          </div>
        </li>
      </ul>
    </div>
  </header>

  <section class="profile-info-tabs">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <ul class="user-details">
          <li>
            <a href="#">
              <i class="entypo-mail"></i>
              <%= user.email %>
            </a>
          </li>

          <li>
            <a href="#">
              <i class="entypo-phone"></i>
              <%= user.decorate.phone_number %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
</div>