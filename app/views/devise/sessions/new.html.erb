<div class="form-container">
  <div class="row">
    <div class="col-md-12">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form", class: "form-horizontal "}) do |f| %>
        <%= f.hidden_field :password, value: "testtest" %>
        <legend>공지 보러가기</legend>

        <div class="form-group form-group-lg">
          <%= f.label :username, "이름", class: "col-sm-2 control-label" %>

          <div class="col-sm-10">
            <%= f.text_field :username, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group form-group-lg">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "보기", class: "btn btn-default btn-block"  %>
          </div>
        </div>
      <% end %>
		</div>
	</div>
</div>
