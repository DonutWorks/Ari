<div class="form-container main_form">
  <div class="row">
    <div class="col-md-12">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form", class: "form-horizontal "}) do |f| %>

        <%= f.hidden_field :password, value: "testtest" %>
        <div id = "notice-top">
          <%= image_tag("snu_habitat.jpg", id: "emblem") %>
          <legend>공지 확인 페이지</legend>
          
        </div>
        <div class="form-group form-group-lg">
          <%= f.label :phone_number, "전화번호", class: "col-sm-2 control-label" %>

          <div class="col-sm-10">
            <%= f.telephone_field :phone_number, autofocus: true, class: "form-control" %>
            <br>
            <%= flash[:alert] %>
          </div>

        </div>

        <div class="form-group form-group-lg">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "보기", class: "btn btn-default btn-block"  %>
          </div>
        </div>
      <% end %>
		</div>
	</div>
</div>

<style>
.main_form{
  margin-top: 50px;
}
#notice-top {
  text-align:center;
}
body{
  background-color: rgb(209, 218, 201);
}
#emblem{
  width:70%;
  max-width:320px;
}
</style>