<div>
  <div class="page-header clearfix">
    <h3 class="text-center">안녕하세요 <%= @user.username %> 님!</h3>
    <div class="pull-right"><%= link_to('Logout', sign_out_users_path) %></div>
  </div>

  <div class="page-header clearfix">
    <p>이메일 : <%= @user.email %></p>
    <p>전화번호 : <%= @user.phone_number %></p>
  </div>

  <div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th width="40%">공지 이름</th>
        <th width="40%">행사 날짜</th>
        <th width="20%">참가 여부</th>
      </tr>
    </thead>
    <tbody>
      <% @user.responses.each do |response| %>
        <tr>
          <td><%= response.notice.title %></td>
          <td><%= response.notice.event_at %></td>
          <td><%= response.decorate.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div class="content">

  </div>

</div>