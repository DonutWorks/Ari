<div class="form-container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @user, url: sign_up_users_path do |f|%>
        <legend>계정 활성화</legend>
        <div class="form-group">
          <div>
            <%= @user_info['name'] %>
          </div>
          <div>
            <%= image_tag(@user_info['image']) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <p>
          <%= f.submit "Verify", class: "btn btn-primary btn-sm"  %>
        </p>
      <% end %>
    </div>
  </div>
</div>