<div class="form-container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @user, url: sign_up_users_path do |f|%>
        <legend>Email Verification</legend>

        <div class="form-group">
          <div>
            <%= @auth_hash['info']['name'] %>
          </div>
          <div>
            <%= image_tag(@auth_hash['info']['image']) %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <p>
          <%= f.submit "Verify", class: "btn btn-primary btn-sm"  %>
        </p>
      <% end %>
    </div>
  </div>
</div>