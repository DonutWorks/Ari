<div class="form-container main_form">
  <div class="row">
    <div class="col-md-12">

      <%= form_for @user, url: sessions_path, html: {role: "form", class: "form-horizontal "} do |f| %>
        <div id = "notice-top">
          <%= image_tag("snu_habitat.jpg", id: "emblem") %>
          <legend>공지 확인 페이지</legend>

        </div>
        <div class="form-group form-group-lg">
          <%= f.label :phone_number, "전화번호", class: "col-sm-2 control-label" %>

          <div class="col-sm-10">
            <%= f.telephone_field :phone_number, autofocus: true, class: "form-control" %>
            <br>
            <%= flash[:alert] %>
          </div>

        </div>

        <div class="form-group form-group-lg">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "보기", class: "btn btn-default btn-block"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
